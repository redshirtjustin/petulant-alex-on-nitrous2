source 'https://rubygems.org'

group :development, :test, :production do
    gem 'rails', '4.1.8'     
    gem 'sqlite3'    
    gem 'sass-rails', '~> 4.0.3' # Use SCSS for stylesheets    
    gem 'uglifier', '>= 1.3.0' # Use Uglifier as compressor for JavaScript assets    
    gem 'jquery-rails' # Use jquery as the JavaScript library
    gem 'jquery-ui-rails' #jQuery UI's JavaScript, CSS, and image files packaged for the Rails 3.1+ asset pipeline
    gem 'turbolinks' # Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
    gem 'jbuilder', '~> 2.0' # Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder       
    gem 'acts-as-taggable-on', '~> 3.4.3' # Easy tags extension to models
    gem 'therubyracer', '~> 0.12.1' # Lets javascript and ruby code manipulate each other
    gem 'less-rails' # The dynamic stylesheet language for the Rails asset pipeline. Allows other gems to extend Less load path.
    gem 'twitter-bootstrap-rails' # twitter-bootstrap-rails project integrates Bootstrap CSS toolkit for Rails 3.1 Asset Pipeline
    gem 'irbtools', require: 'binding.repl' # Enhanced IRB experience
    gem 'bcrypt', '~> 3.1.10'
end

group :development, :test do
    gem 'rspec', '~> 3.2.0'
    gem 'rspec-support', '~> 3.2.0'
    gem 'rspec-rails', '~> 3.2.0'
    gem 'faker' # Faker produces Loren Ipsum and other dummy text
end

group :development do
    gem 'spring', '~> 1.3.1' # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
end

group :doc do
    # gem 'sdoc', '~> 0.4.0' # bundle exec rake doc:rails generates the API under doc/api.
    gem 'yard'
end

 
